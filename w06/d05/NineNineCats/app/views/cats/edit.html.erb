
<form action="<%= cat_url(@cat) %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name</label>
  <input type="text" id="name" name="cat[name]" value="<%= @cat.name %>">

  <label for="sex">Sex</label>
  <input id="sex" type="radio" name="cat[sex]" value="M">
  <input id="sex" type="radio" name="cat[sex]" value="F">

  <label for="color">Color</label>
  <select name="cat[color]" id="color">
    <option value="Select Color" disabled="true" selected="true">Select Color</option>
    <% Cat.allowed_colors.each do |color| %>
    <option value="<%= color %>"><%= color.capitalize %></option>
    <% end %>
  </select>
  
  <label for="birth-date">Birth date</label>
  <input type="date" id="birth-date" name="cat[birth_date]"value="<%= @cat.birth_date %>">

  <label for="description">description</label>
  <textarea name="cat[description]">
    <%= @cat.description %>
  </textarea>

  <input type="submit" value="Update Cat">
</form>